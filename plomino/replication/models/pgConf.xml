       xmlns:marshal="http://namespaces.plone.org/supermodel/marshal"
       xmlns="http://namespaces.plone.org/supermodel/schema">
  <schema>
    <field name="pgConn" type="zope.schema.TextLine">
      <description/>
      <title>PostgreSQL Connection String</title>
	  <required>True</required>
    </field>
    <field name="pgSchema" type="zope.schema.TextLine">
      <description/>
      <title>PostgreSQL Schema</title>
    </field>
	<field name="pgTable" type="zope.schema.TextLine">
      <description/>
      <title>PostgreSQL Table</title>
    </field>
    <field name="description" type="plone.app.textfield.RichText">
      <description/>
      <required>False</required>
      <title>Description</title>
    </field>
    
  </schema>
</model>